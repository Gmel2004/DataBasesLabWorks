<Window x:Class="ChessTactics.EditGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessTactics"
        mc:Ignorable="d"
        Title="EditGame" Height="450" Width="800">
    <Grid VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label HorizontalAlignment="Center" Grid.Column="1" Content="Edit game"/>
        <Label Grid.Row="1" Content="Path"/>
        <Label Grid.Row="2" Content="Number Start Move"/>
        <Label Grid.Row="3" Content="Tactic"/>
        <Label Grid.Row="4" Content="Platfom"/>
        <Label Grid.Row="5" Content="Date"/>
        <Label Grid.Row="6" Content="Move count"/>
        <Label Grid.Row="7" Content="Start time"/>
        <Label Grid.Row="8" Content="Second to add"/>
        <Label Grid.Row="9" Content="Opening"/>
        <Label Grid.Row="10" Content="Sequence length"/>
        <Label Grid.Row="11" Content="White"/>
        <Label Grid.Row="12" Content="Black"/>
        <Label Grid.Row="13" Content="Result"/>
        <ComboBox Grid.Row="1" Grid.Column="1"/>
        <TextBox Grid.Row="1" Grid.Column="2"/>
        <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"/>
        <ComboBox Grid.Row="3" Grid.Column="1"/>
        <TextBox Grid.Row="3" Grid.Column="2"/>
        <ComboBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"/>
        <DatePicker Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2"/>
        <TextBox Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2"/>
        <TextBox Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2"/>
        <TextBox Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="2"/>
        <ComboBox Grid.Row="9" Grid.Column="1"/>
        <TextBox Grid.Row="9" Grid.Column="2"/>
        <TextBox Grid.Row="10" Grid.Column="1" Grid.ColumnSpan="2"/>
        <ComboBox Grid.Row="11" Grid.Column="1"/>
        <ComboBox Grid.Row="12" Grid.Column="1"/>
        <TextBox Grid.Row="11" Grid.Column="2"/>
        <TextBox Grid.Row="12" Grid.Column="2"/>
        <ComboBox Grid.Row="13" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Button Grid.Row="14" Content="Change"/>
        <Button Grid.Row="14" Grid.Column="1" Content="Add"/>
        <Button Grid.Row="14" Grid.Column="2" Content="Remove"/>
    </Grid>
</Window>
